<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<Pane
        xmlns="http://javafx.com/javafx/11.0.1"
        prefHeight="830.0"
        prefWidth="1500.0"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.example.ui.game_screen.GameController">

    <ImageView fx:id="mapView"
               layoutX="15.0"
               layoutY="15.0"
               fitHeight="800.0"
               fitWidth="1200.0"
               smooth="false"
    />

    <Button fx:id="playButton" text="PLAY" layoutX="1230.0" layoutY="15.0"/>
    <Button fx:id="pauseButton" text="PAUSE" layoutX="1230.0" layoutY="55.0"/>
    <Button fx:id="stepButton" text="STEP" layoutX="1230.0" layoutY="95.0"/>

    <Text fx:id="timeInfo" layoutX="1230.0" layoutY="15.0"/>
    <ImageView fx:id="corner"
               fitHeight="1.0"
               fitWidth="1.0"
               smooth="false"
    />
</Pane>
